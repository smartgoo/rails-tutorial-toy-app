<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<table>
  <thead>
    <tr>
      <th>Created On:</th>
      <th>Content:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.microposts.each do |micropost| %>
      <td><%= micropost.created_at %></td>
      <td><%= micropost.content %></td>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
